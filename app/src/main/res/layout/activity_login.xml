<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkg3"
    tools:context=".Login">


    <EditText
        android:id="@+id/name"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="憨憨的名字"
        android:singleLine="true"/>

    <Button
        android:id="@+id/confirm_Button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:text="确认"
        android:background="#44cef6"
        android:textColor="#ffffff"
        android:textSize="20dp"/>


        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/confirm_Button"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    <TextView
        android:id="@+id/agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已仔细阅读"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/check_box"
        app:layout_constraintLeft_toRightOf="@id/check_box"
        app:layout_constraintTop_toTopOf="@+id/check_box" />
    <Button
        android:id="@+id/user_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用者协议"
        app:layout_constraintTop_toTopOf="@id/check_box"
        app:layout_constraintBottom_toBottomOf="@id/check_box"
        app:layout_constraintLeft_toRightOf="@id/check_box"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginLeft="75dp"
        android:textColor="#1e50a2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>